<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFFEE7">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/ingImage"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:civ_border_color="#FFFEE7"
        app:civ_border_width="2dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/mealActIngredientMeasureTxtView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="50dp"
        android:text="TextView"
        android:textColor="@color/item_background_color"
        android:textColorLink="@color/white"
        android:textSize="20sp"
        android:textStyle="bold|italic"
        app:layout_constraintStart_toEndOf="@+id/ingImage"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/mealActIngredientTxtView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:text="TextView"
        android:textColor="@color/item_background_color"
        android:textColorLink="@color/item_background_color"
        android:textSize="20sp"
        android:textStyle="bold|italic"
        app:layout_constraintStart_toEndOf="@+id/mealActIngredientMeasureTxtView"
        app:layout_constraintTop_toTopOf="@+id/mealActIngredientMeasureTxtView" />

</androidx.constraintlayout.widget.ConstraintLayout>